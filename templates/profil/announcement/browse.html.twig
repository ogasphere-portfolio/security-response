{% extends 'profil/base_profil.html.twig' %}

{% block title %}Liste de mes annonces{% endblock %}

{% block body %}
<header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
                    <ul class="navbar-nav">                
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Les annonces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Mon profil</a>
                        </li>                             
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<main>
    <div class="container">
        <div class="d-flex flex-column flex-md-row">
            <div class="d-flex mt-4 text-center mx-auto">
                <h1>Bienvenue dans votre espace Entreprise</h1>
            </div>
        </div> 
        <div class="d-flex flex-column flex-md-row mt-5">
            <div class="mt-5">
                <div class="bg-white mt-3 rounded border profile-heading">
                    <h4 class="px-0 py-2 text-center">Mon compte</h4>
                        <ul class="list-group">
                            <li class="list-group">
                                <a class="nav-link fs-6" aria-current="page" href="{{ url('announcement_browse') }}">Infos de connexion</a>
                            </li>
                            <li class="list-group">
                                <a class="nav-link" aria-current="page" href="{{ url('announcement_browse') }}">Mes coordonnées</a>
                            </li>
                            <li class="list-group">
                                <a class="nav-link" aria-current="page" href="{{ url('announcement_browse') }}">Mes certifications</a>
                            </li>
                            <li class="list-group">
                                <a class="nav-link" aria-current="page" href="{{ url('announcement_browse') }}">Supprimer mon compte</a>
                            </li>
                        </ul>
                </div>

                <div class="bg-white mt-3 rounded border profile-heading">
                    <h4 class="px-0 py-2 text-center">Mes annonces</h4>
                        <ul class="list-group">
                            <li class="list-group">
                                <a class="nav-link" aria-current="page" href="{{ url('announcement_add') }}">Créer une annonce</a>
                            </li>
                            <li class="list-group">
                                <a class="nav-link" aria-current="page" href="{{ url('announcement_browse') }}">Gérer mes annonces</a>
                            </li>
                        </ul>
                </div>
            </div>
        

            <section class="text-center container mt-4">
                <div class="d-flex">
                    <div class="mx-auto">
                        <h2 class="fw-bold">Liste des annonces</h2>  
                            <div>
                                <div>
                                    <table class="mt-4">            
                                            <tbody>
                                                
                                                {% for announcement in announcement_browse %}
                                                <tr class="d-flex flex-column w-75 mx-auto my-3 p-3 bg-white rounded border">   
                                                    <td class="py-1"><strong>{{ announcement.title }}</strong></td>
                                                    <td class="py-1">{{ announcement.description }}</td>
                                                    <td class="py-1"><em>{{ announcement.createdAt|date("d/m/Y") }}</em></td>
                                                </tr>
                                                {% endfor %}
                                                
                                                
                                            </tbody>
                                    </table>  
                                </div>        
                            </div>
                    </div>
                </div>                  
            </section>
        </div>
    </div>
</main>     
{% endblock %}
