{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<main>
    <div class="container mt-6">
        <div class="row">
            <div class="col-md-6 w-md-75 mx-auto">
              
                <div class="account-wall p-5">
        
                        <h1 class="h3 mb-4 font-weight-normal">Inscription</h1>
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}  

                        <div class="col-12">
                            <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
                        </div>
                        
                        {{ form_end(registrationForm) }}
                    </div>
                <a href="{{ path('app_register') }}" class="text-center new-account text-decoration-none fw-bold">Cr√©er un compte</a>
            </div>
        </div>
    </div>
</main>

{% endblock %}
