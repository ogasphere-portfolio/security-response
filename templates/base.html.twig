<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>{% block title %}Security Response{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset("css/style.css") }}">
    {# Leaflet’s CSS: #}
      <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
    crossorigin=""/>

    <!-- Custom font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet">
  
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand title text-primary text-uppercase" href="{{ url('homepage') }}" id="logo-name">
                    <img class="logo-img" src="{{ asset("img/logo.svg") }}" alt="logo security response">
                    <strong>security response</strong>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
                    <ul class="navbar-nav nav-button">
                        <li class="nav-item active mx-lg-2">
                            <a class="nav-link {{ app.request.get('_route') == 'enterprise_browse' ? 'active' }}" aria-current="page" href="{{ url('enterprise_browse') }}">Trouver une entreprise</a>
                        </li>

                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'announcement_browse' ? 'active' }}" href="{{ path('announcement_browse') }}">Les annonces</a>
                        </li>

                        {% if app.user.userMember == null %}
                        <li class="nav-item">                                                   
                            <a class="nav-link {{ app.request.get('_route') == 'profile_enterprise' ? 'active' }}" href="{{ path('profile_enterprise', {id: app.user.id}) }}">                       
                            <span class="text">Mon profil</span>
                            </a>
                        </li>
                        {% elseif app.user.userMember != null %}
                        <li class="nav-item">                                                  
                            <a class="nav-link {{ app.request.get('_route') == 'profile_member' ? 'active' }}" href="{{ path('profile_member', {id: app.user.id}) }}">                       
                            <span class="text">Mon profil</span>
                            </a>
                        </li>
                        {% endif %}
                        
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_logout' ? 'active' }}" href="{{ url('app_logout') }}">Se déconnecter</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_login' ? 'active' }}" href="{{ url('app_login') }}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_register' ? 'active' }}" href="{{ url('app_register') }}">Inscription</a>
                        </li>
                       
                        {% endif %}   
                        <li class="nav-item">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link {{ app.request.get('_route') == 'backoffice_browse' ? 'active' }}" href="{{ path('backoffice_browse') }}">Administation</a>
                            {% endif %}
                        </li>                     
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    {% block body %}{% endblock %}

    <footer class="text-muted py-5">
        <div class="container d-flex align-items-center flex-column">
            <div class="col">
            <p class="d-flex flex-column flex-md-row mb-0">
                <a class="mx-2 text-decoration-none" href="/">Mentions légales</a>
                <a class="mx-2 text-decoration-none" href="/">Conditions Générales de Ventes</a>
                <a class="mx-2 text-decoration-none" href="/">Contact</a>
                <a class="mx-2 text-decoration-none" href="/team">L'équipe</a>
            </p>
            </div>
            <div class="col">
                <p class="mb-1">Copyright 2021 - &copy; Security Response </p>
            </div>
        </div>
    </footer>

    <script src="{{ asset("js/registration.js") }}"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
     integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
      crossorigin=""></script>
      {% block javascripts %}{% endblock %}
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script> 

</body>

</html>