{% extends 'profil/base_profil.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
<header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
                    <ul class="navbar-nav">                
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Les annonces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Mon profil</a>
                        </li>                             
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<main>
    <div class="container">
        <div class="d-flex flex-column flex-md-row">
            <div class="d-flex mt-4 text-center mx-auto">
                <h1>Bienvenue dans votre espace Membre</h1>
            </div>
        </div> 
        
        

            <section class="text-center container mt-4">
                <div class="d-flex">
                    <div class="mx-auto">
                        <h2 class="fw-bold">Liste des membres</h2>  
                            <div>
                                <div>
                                    <table class="mt-4">            
                                            <tbody>
                                                
                                                {% for member in member_browse %}
                                                <tr class="d-flex flex-column w-75 mx-auto my-3 p-3 bg-white rounded border">   
                                                    <td class="py-1"><strong>{{ member.firstname }}</strong></td>
                                                    <td class="py-1">{{ member.lastname }}</td>                                                    
                                                </tr>
                                                {% endfor %}
                                                
                                                
                                            </tbody>
                                    </table>  
                                </div>        
                            </div>
                    </div>
                </div>                  
            </section>
        </div>
    </div>
</main>     
{% endblock %}
