{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main>
		<div class="container mt-6">
			<div class="row">
				<div class="col-md-6 w-md-75 mx-auto">

					<div class="account-wall">

						<form method="post" class="form-signin">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									vous êtes connectés en tant que
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Déconnexion</a>
								</div>
							{% endif %}

							<h1 class="h3 mb-4 font-weight-normal">Connectez-vous</h1>
							<label for="inputEmail">Email</label>

							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							<label for="inputPassword">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="checkbox mb-3">
								<label>
									<input type="checkbox" name="_remember_me">
									Se souvenir de moi
								</label>
							</div>
							<div class="login-form text-center">
								<button class="btn btn-lg btn-primary" type="submit">
									Connexion
								</button>
							</div>
							<a href="{{ path('app_forgot_password') }}" class="text-center new-account text-decoration-none fw-bold">Mot de passe oublié ?</a>


						</form>

					</div>

				</div>
			</div>
		</div>
	</main>

{% endblock %}
